<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 향후 Mapper interface가 정의 될 위치 -->
<mapper namespace="com.multi.bbs.account.AccountMapper">
	<sql id="selectMemberSql">
		SELECT 	
			MNO, ROLE, NAME, EMAIL, PASSWORD, PHONE, STATE, ENROLL_DATE
		FROM MEMBER
	</sql>
	
	<select id="selectCount" resultType="int">
		SELECT COUNT(*) FROM MEMBER
	</select>
	
	<select id="selectAll" resultType="com.multi.bbs.account.Member">
		<include refid="selectMemberSql"/>
	</select>
	
	<select id="selectMember" parameterType="string" resultType="com.multi.bbs.account.Member">
		<include refid="selectMemberSql"/>
		WHERE EMAIL = #{email} AND STATE = 'Y'
	</select>	
	
	<insert id="insertMember" parameterType="com.multi.bbs.account.Member">
		INSERT INTO MEMBER(
			MNO, ROLE, NAME, 	
			EMAIL, PASSWORD, PHONE,
			STATE, ENROLL_DATE
		) VALUES (
			 0, default, #{name},
			 #{email}, #{password}, #{phone}, 
			 'Y', DEFAULT
		)
	</insert>
	
	
	
</mapper>